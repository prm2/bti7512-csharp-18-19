<UserControl x:Class="UserControls.HelloControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="Red" BorderThickness="5" CornerRadius="5" Height="Auto" Width="Auto" Margin="10">
        <TextBlock Foreground="Red" FontSize="72" Text="Hello" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Border>
</UserControl>
